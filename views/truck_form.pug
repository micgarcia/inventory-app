extends layout

block content
  div.truckFormContent
    h1= title

    form(method='POST' action='')
      div
        label(for='name') Name:
        select(type='select' placeholder='Select Model' name='name' required='true')
          option(value='Tesla Cybertruck' selected=(undefined===truck ? false : (truck.name==='Tesla Cybertruck' ? true : false))) Cybertruck
          option(value='Tesla Semi' selected=(undefined===truck ? false : (truck.name==='Tesla Semi' ? true : false))) Semi

      div
        label(for='trim') Trim:
        select(type='select' placeholder='Select Trim' name='trim' required='true')
          option(value='Rear Wheel Drive' selected=(undefined===truck ? false : (truck.trim==='Rear Wheel Drive' ? true : false))) Rear Wheel Drive
          option(value='Dual Motor' selected=(undefined===truck ? false : (truck.trim==='Dual Motor' ? true : false))) Dual Motor
          option(value='Tri Motor' selected=(undefined===truck ? false : (truck.trim==='Tri Motor' ? true : false))) Tri Motor

      div
        label(for='price') Price:
        input(type='number' name='price' required='true' value=(undefined===truck ? '' : truck.price))

      div
        label(for='description') Description:
        textarea(type='textarea' name='description' required='true') #{undefined===truck ? '' : truck.description}

      div
        label(for='stock') Stock:
        input(type='number' name='stock' required='true' value=(undefined===truck ? '' : truck.stock))

      button(type='submit') Submit

    if errors
      ul
        for error in errors
          li!= error.msg